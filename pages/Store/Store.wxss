.StoreList{
    padding: 0 20rpx;
    margin-top: 22rpx;
    background-color: #fff;
    font-size: 28rpx;
}
.StoreList_top{
    padding: 30rpx 0;
    border-bottom:2rpx solid #eee;
}
.text{
    display: flex;
}
.text>view:first-child{
    color: #9c9c9c;
}
.text>view:nth-child(2){
    margin-left: 30rpx;
}
.btn_edit{
    height: 100rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    display:flex;
    justify-content: flex-end;
}
.edit{
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background-color: #2168D3;
    color: #fff;
    border-radius: 50rpx;
    margin-top: 20rpx;
}