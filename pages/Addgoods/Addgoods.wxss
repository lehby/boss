.goods{
    height: 84rpx;
    line-height: 84rpx;
    padding: 0 20rpx;
    background-color: #fff;
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    border-bottom: 2rpx solid #f5f5f5;
}
.goods_right{
    display: flex;
}
/* 商品弹框 */
.show-btn {
    margin-top: 100rpx;
    color: #22cc22;
  }
  
  .modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
  }
  
  .modal-dialog {
    width: 680rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 34rpx;
    border-radius: 36rpx;
  }
  .modal-title {
    /* padding-top: 42rpx; */
    font-size: 36rpx;
    color: #030303;
    text-align: center;
  }
  .btn-Photograph{
    width: 680rpx;
    height: 81rpx;
    text-align: center;
    line-height: 89rpx;
    color: #666;
    background-color: #eeeeee;
    font-size: 46rpx;
    font-weight: 900;
  }
  .user{
    margin: 0 auto;
    width: 620rpx;
    height: 70rpx;
    display:flex;
    line-height: 70rpx;
}
.user_left{
    width: 160rpx;
    height: 70rpx;
    color: #aaaaaa;
    text-align: center;
}
.user_right{
    width: 480rpx;
    height: 70rpx;
}
.user_right>input{
    width: 440rpx;
    height: 70rpx;
    border-bottom: 2rpx solid #aaaaaa;
    font-size: 32rpx;
    padding-left: 28rpx;
}
  .modal-ipt{
    padding-bottom: 36rpx;
    color: #c7c7cc;
  }
  .modal-ipt>input{
      width: 477rpx;
      height: 50rpx;
      margin: 0 auto;
      border:2rpx solid;
      padding-left: 10rpx;
  }
  .modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
  }
  
  .btn-cancel {
    width: 50%;
    color: #007aff;
    text-align: center;
    border-right: 1px solid #dedede;
  }
  .btn-confirm {
    width: 50%;
    color: #007aff;
    text-align: center;
  }
  .btn-Number{
    width: 680rpx;
    height: 89rpx;
    text-align: center;
    line-height: 89rpx;
    border-bottom: 2rpx solid;
  }
  .goodsList{
    padding: 0 24rpx;
    height: 108rpx;
    line-height: 108rpx;
    text-align: center;
}
.goods_right{
    display: flex;
}
